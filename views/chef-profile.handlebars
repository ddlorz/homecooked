<div class="container">
    <div class="row" id="header">
        <h1 class='inline'>Homecooked</h1>        
        <b class='inline right' id='sign_out'>Sign Out</b>
        <hr>
    </div>
    <div class="row">
        <div class="col-xs-4">
            <div class="row">
                <img class="img-circle center-block profile-picture" src={{result.dataValues.User.dataValues.photo}} alt="chef-image" width="60%">
            </div>
            <div class="row center-block text-center" id="chef_bio">
                <h4>Steak-aficionado, mixed-veggie master on a health kick</h4>
            </div>
        </div>
        <div class="col-xs-8" style="padding-left:4%">
            <div class="row">
                <h3>{{result.dataValues.User.dataValues.first_name}} {{result.dataValues.User.dataValues.last_name}}.| {{result.dataValues.location}} </h3>
            </div>
            <div class="row" id="chef_specialties">
                <h4><u class='pacifico tab'>Specialty Cuisines:</u> Poultry, Beef, Vegetables, Pasta, Salads, Fruits, Gluten Free</h4>
                <h4><u class='pacifico tab'>Price Range:</u> ${{result.dataValues.price}}.00</h4>
                <h4><u class='pacifico tab'>Travel Radius:</u> 15+ Miles</h4>   
                <br> 
                <br>
                <input data-toggle="modal" data-target="#message_modal" class="btn btn-primary" type="button" value="MESSAGE">            
            </div>
        </div>
    </div>
    <hr>
    <div class="row text-center">
        <h3>MENUS</h3>
        <div class="col-md-4" id="menu1">
            <div class="row" id="menu1_pic">
                <img src="/assets/chicken_2.jpg" alt="chicken" width="75%">
                <div class="col-xs-10 col-xs-offset-1">Chicken fried steak with garlic mashed potatoes | $10</div>
            </div>
            <div class="row" id="menu1_desc"></div>
        </div>
        <div class="col-md-4" id="menu2">
            <div class="row" id="menu2_pic">
                <img src="/assets/roast_3.jpg" alt="chicken" width="75%">
                <div class="col-xs-10 col-xs-offset-1">Gravy-smothered meatloaf alongside steamed mixed vegetables and a cupcake | $9</div>
            </div>
            <div class="row" id="menu2_desc"></div>
        </div>
        <div class="col-md-4" id="menu3">
            <div class="row" id="menu3_pic">
                <img src="/assets/salad_7.jpg" alt="chicken" width="75%">
                <div class="col-xs-10 col-xs-offset-1">Mixed green salad topped with 4 oz. of baked chicken, pumpkin seeds, cranberries and broccoli sprouts
                    | $6</div>
            </div>
            <div class="row" id="menu3_desc"></div>
        </div>
    </div>
    <div class="modal fade" id="message_modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title inline">Send Chef Message</h3>
                    <button type="button" class="close inline" data-dismiss="modal" aria-label="Close">&times;</button>
                </div>             

                <div class="modal-body">
                    <div class="form-group">
                        <label for="text">To: </label>
                        <input type="text" class="form-control" id='chef_email' value={{result.dataValues.email}} disabled>
                    </div>  
                    <div class="form-group">
                        <label for="text">Subject: </label>
                        <input type="text" class="form-control" id='email_subject' placeholder="Subject">
                    </div> 
                    <div class="form-group">
                        <label for="text">Message: </label>
                        <textarea type="text" class="form-control" id="user_message" rows='10'></textarea>
                    </div>                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id='send_message'>Send Message</button>
                </div>
            </div>
        </div>
    </div>

    <hr>
    <footer class="nav text-center" id="footer">  
        <label for='footer' class='text-center'><h3>Follow Us<h3></label>  
        <a class="nav-link" href="#"><img src='/assets/twitter.png' class='follow_icon' alt='twitter'></a> | 
        <a class="nav-link" href="#"><img src='/assets/facebook.png' class='follow_icon' alt='facebook'></a> | 
        <a class="nav-link" href="#"><img src='/assets/instagram.png' class='follow_icon' alt='instagram'></a> | 
        <a class="nav-link" href="#"><img src='/assets/youtube.png' class='follow_icon' alt='youtube'></a>
    </footer>

</div>

<script>
    $(document).on('click', '#send_message', function() {
         $('#message_modal').modal('toggle');
         $('#email_subject').val('');
         $('#user_message').val('');
         $.post('/api/send_mail', {}, function(res) {});
    });

    $(document).on('click', '#sign_out', function() {
         localStorage.setItem('chef_email', '');
         localStorage.setItem('email', '');

         var url = window.location.origin + '/'
         window.location = url;
    });

</script>

