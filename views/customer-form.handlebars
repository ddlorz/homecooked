<div class="container">
        <div class="row" id="header">
            <h1>Homecooked</h1>
            <hr>
        </div>

        <div class="row">
            <div class="col-xs-4">
                <img src="" alt="customer-image">
            </div>

            <div class="col-xs-8">
                <div class="row">
                    <h3>USERNAME I. | 77005 </h3>
                </div>
                <div class="row" id="restrictions">
                    <div class="col-xs-11">
                        <h4>
                            <u>Dietary Restrictions: </u>
                        </h4>
                    </div>
                    <div class="col-xs-1">
                        <button data-toggle="modal" data-target="#customer_restrictions_modal"><span class="glyphicon glyphicon-pencil"></span></button>
                    </div>
                    <!-- List Diet. Restric. Here -->
                </div>

                 <div class="row" id="allergies">
                    <div class="col-xs-11">
                        <h4>
