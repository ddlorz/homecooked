<div class="container">

    <!--PAGE HEADER - HEADING AND SIGN-OUT LINK-->
    <div class="row" id="header">
        <h1 class='inline'>Homecooked</h1>        
        <b class='inline right' id='sign_out'>Sign Out</b>        
    </div>

    <hr>

    <!--BODY - CHEF BASIC INFO AND PHOTO. EDIT BUTTONS-->
    <div class="row" style='height: 280px;'>
        <div class="col-xs-4">
            <div class="row">
                <img class="img-circle center-block profile-picture" src="/assets/placeholder.jpg" alt="chef-image" width="60%" id='chef_photo'>
                <button class='photo-button icon-enlarge' data-toggle="modal" data-target="#profile_picture_modal">
                    <span class="glyph-font glyphicon glyphicon-camera"></span>
                </button>
            </div>
            <div class="row center-block text-center" id="chef_bio">
                <h4 id='chef_summary'>Chef Summary</h4>
            </div>
        </div>
        <div class="col-xs-6" style="padding-left:4%">
            <div class="row">
                <h3>{{user.first_name}} {{user.last_name}}.| {{user.zip}} </h3>
            </div>
            <div class="row" id="chef_specialties">
                <h4><u class='pacifico tab'>Specialty Cuisines:</u></h4>
                <h4><u class='pacifico tab'>Price Range:</u></h4>
                <h4><u class='pacifico tab'>Travel Radius:</u></h4> 
            </div>
        </div>
        <div class='col-xs-1'>
            <div class='row' style='margin-top: 16px;'>
                <button data-toggle="modal" data-target="#chef_about_modal" style='opacity: .7;'><span class="pencil-button glyphicon glyphicon-pencil"></span></button>
            </div>
        </div>
    </div>

    <hr>

    <div class="row text-center">
        <h3>MENUS</h3>
        <div class="col-md-4" id="menu1">
            <div class="row" id="menu1_pic">
                <img src="/assets/placeholder_dish.jpg" alt="placeholder_dish" class='food_photo' id='food_photo_1'>
                <button class='food-button icon-enlarge' data-toggle="modal" data-target="#food_1_modal">
                    <span class="glyph-font glyphicon glyphicon-pencil"></span>
                </button>
                <div class="col-xs-10 col-xs-offset-1">Description | Price</div>
            </div>
            <div class="row" id="menu1_desc"></div>
        </div>
        <div class="col-md-4" id="menu2">
            <div class="row" id="menu2_pic">
                <img src="/assets/placeholder_pot.jpg" alt="placeholder_pot" class='food_photo' id='food_photo_2'>
                <button class='food-button icon-enlarge' data-toggle="modal" data-target="#food_2_modal">
                    <span class="glyph-font glyphicon glyphicon-pencil"></span>
                </button>
                <div class="col-xs-10 col-xs-offset-1">Description | Price</div>
            </div>
            <div class="row" id="menu2_desc"></div>
        </div>
        <div class="col-md-4" id="menu3">
            <div class="row" id="menu3_pic">
                <img src="/assets/placeholder_dish.jpg" alt="placeholder_dish" class='food_photo' id='food_photo_3'>
                <button class='food-button icon-enlarge' data-toggle="modal" data-target="#food_3_modal">
                    <span class="glyph-font glyphicon glyphicon-pencil"></span>
                </button>
                <div class="col-xs-10 col-xs-offset-1">Description | Price</div>
            </div>
            <div class="row" id="menu3_desc"></div>
        </div>
    </div>

    <!--MODAL-->
    <div class="modal fade" id="chef_about_modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" style='display: inline-block'>Edit Information</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style='display: inline-block'>&times;</button>
                </div>
                <div class="modal-body">                    
                    <div class="form-group">
                        <label for="text">Tell us a little about yourself (Limit 100 characters)</label>
                        <textarea type="text" class="form-control" id='summary' rows='3'></textarea>
                    </div>
                    <div class="form-group">
                        <label for="text">Specialties</label>
                        <input type="text" class="form-control" id="specialties">
                    </div>
                    <div class="form-group">
                        <label for="text">Price Range</label>
                        <input type="text" class="form-control" id="price">
                    </div>
                    <div class="form-group">
                        <label for="text">Travel Radius</label>
                        <input type="text" class="form-control" id="radius">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id='profile_save'>Save Changes</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="profile_picture_modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" style='display: inline-block'>Edit Profile Picture</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style='display: inline-block'>&times;</button>
                </div>
                <div class="modal-body"> 
                    <div class="form-group">
                        <label for="text">Photo Image</label>
                        <input type="file" class="form-control" id="profile_photo">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" id='photo_save'>Save Image</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="food_1_modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" style='display: inline-block'>Edit Menu</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style='display: inline-block'>&times;</button>
                </div>
                <div class="modal-body"> 
                    <div class="form-group">
                        <label for="text">Food Image</label>
                        <input type="file" class="form-control" id="menu_1">
                    </div>
                    <div class="form-group">
                        <label for="text">Description</label>
                        <textarea type="text" class="form-control" id='desc_1' rows='2'></textarea>
                    </div>
                    <div class="form-group">
                        <label for="text">Price</label>
                        <input type="text" class="form-control" id="price_1">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary save_button" id='1'>Save Image</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="food_2_modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" style='display: inline-block'>Edit Menu</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style='display: inline-block'>&times;</button>
                </div>
                <div class="modal-body"> 
                    <div class="form-group">
                        <label for="text">Food Image</label>
                        <input type="file" class="form-control" id="menu_2">
                    </div>
                    <div class="form-group">
                        <label for="text">Description</label>
                        <textarea type="text" class="form-control" id='desc_2' rows='2'></textarea>
                    </div>
                    <div class="form-group">
                        <label for="text">Price</label>
                        <input type="text" class="form-control" id="price_2">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary save_button" id='2'>Save Image</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="food_3_modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" style='display: inline-block'>Edit Menu</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style='display: inline-block'>&times;</button>
                </div>
                <div class="modal-body"> 
                    <div class="form-group">
                        <label for="text">Food Image</label>
                        <input type="file" class="form-control" id="menu_3">
                    </div>
                    <div class="form-group">
                        <label for="text">Description</label>
                        <textarea type="text" class="form-control" id='desc_3' rows='2'></textarea>
                    </div>
                    <div class="form-group">
                        <label for="text">Price</label>
                        <input type="text" class="form-control" id="price_3">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary save_button" id='3'>Save Image</button>
                </div>
            </div>
        </div>
    </div>

    <hr>    

    <!--DOCUMENT FOOTER - INCLUDES SOCIAL MEDIA ICONS-->
    <footer class="nav text-center" id="footer">  
        <label for='footer' class='text-center'><h3>Follow Us<h3></label>  
        <a class="nav-link" href="#"><img src='/assets/twitter.png' class='follow_icon' alt='twitter'></a> | 
        <a class="nav-link" href="#"><img src='/assets/facebook.png' class='follow_icon' alt='facebook'></a> | 
        <a class="nav-link" href="#"><img src='/assets/instagram.png' class='follow_icon' alt='instagram'></a> | 
        <a class="nav-link" href="#"><img src='/assets/youtube.png' class='follow_icon' alt='youtube'></a>
    </footer>
</div>

