<div class="container">

    <!--DOCUMENT HEADER - HEADING ONLY-->
    <div class="row" id="header">
        <h1 style="padding-bottom: .4em">Homecooked</h1>
    </div>

    <!--BODY - INCLUDES SIGN-IN, SIGN-UP, AND BACKGROUND IMG-->    
    <div class="row" id="main_row">
        <div class="col-md-5 col-md-offset-7 col-sm-5 col-sm-offset-7 col-xs-5 col-xs-offset-7" id="main_form">

            <!--SIGN-IN/SIGN-UP PANEL-->
            <div class="panel panel-default container-fluid" id='sign_panel'>

                <!--PANEL HEADER - HEADINGS AND SIGN-IN/SIGN-UP LINKS-->
                <div class="panel-heading row">
                    <div class="col-xs-8" id="sign_up_heading">
                        <h2>Sign Up!</h2>
                    </div>
                    <div class="col-xs-8 hide" id="sign_in_heading">
                        <h2>Sign In!</h2>
                    </div>
                    <div class="col-xs-4 text-right" style="margin-top: 5%" id="have_an_acct">
                        <h5>Already have an account?<br><a href="#" id="sign_in">Sign in</a></h5>
                    </div>
                    <div class="col-xs-4 text-right hide" style="margin-top: 5%" id="dont_have_acct">
                        <h5>Don't have an account?<br><a href="#" id="sign_up">Sign Up</a></h5>
                    </div>
                </div>

                <!--SIGN-UP FORM - USER BASIC INFORMATION-->
                <div class="panel-body" id="sign_up_form">
                    <form>
                        <h3>Sign Up for Awesome Food!</h3>
                        <div class="form-group">
                            <input type="text" class="form-control" id="first_name" placeholder="First Name">
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" id="last_name" placeholder="Last Name">
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" id="email" placeholder="Email">
                        </div>

                        <div class="form-group">
                            <input type="password" class="form-control" id="password" placeholder="Password">
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" id="zipcode" placeholder="Zip Code">
                        </div>

                        <div class="form-group">
                            <input type="text" class="form-control" id="phone_number" placeholder="Phone" name='phone'>
                        </div>
                        
                        <!--PANEL FOOTER - RADIO INPUTS-->                        
                        <h4 class='text-center pacifico'>Would you like to make or purchase meals?</h5>
                        <div class="col-md-offset-4 pacifico" data-toggle="buttons" class='pacifico'>
                            <label class="btn btn-default" style='margin-right: 10px'>
                                <input type="radio" name="options" id="chef_radio">Cook
                            </label>
                            <label class="btn btn-default">
                                <input type="radio" name="options" id="customer_radio">Eat
                            </label>

                            <br><br>

                        </div>
                        <button type="submit" id="submit_user" class="btn btn-success">Submit</button>
                    </form>
                </div>

                <!--SIGN-IN FORM - EMAIL AND PASSWORD INPUT-->
                <div class="panel-body hide" id="sign_in_form">
                    <form>
                        <h3>Welcome Back!</h3>
                        <div class="form-group">
                            <input type="text" class="form-control" id="user_email" placeholder="Email">
                        </div>

                        <div class="form-group">
                            <input type="password" class="form-control" id="user_password" placeholder="Password">
                        </div>

                        <br>

                        <!--PANEL FOOTER - SUBMIT BUTTON-->                        
                        <h4 class='text-center pacifico'>Great chefs are excited to cook for you!</h4>
                        <br>
                        <button type="submit" id="sign-in-submit" class="btn btn-success">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!--BOTTOM ROW - INCLUDES USER GUIDE/STEPS-->
    <div class="row text-center" id="steps_row">
        <div class="col-sm-4 col-xs-12" id="step1">
            <div class="row">
                <h3>Step 1</h3>
            </div>
            <div class="row">
                <img id="step1_pic" src="/assets/step1.png" alt="step1_pic" width="25%">
            </div>
            <div class="row">
                <h5>Find a chef from our gallery of chef profiles. </h5>
            </div>
        </div>

        <div class="col-sm-4 col-xs-12" id="step2">
            <div class="row">
                <h3>Step 2</h3>
            </div>
            <div class="row">
                <img id="step2_pic" src="/assets/step2.png" alt="step2_pic" width="25%">
            </div>
            <div class="row">
                <h5>Choose your meals from your chefâ€™s menu. </h5>
            </div>
        </div>

        <div class="col-sm-4 col-xs-12" id="step3">
            <div class="row">
                <h3>Step 3</h3>
            </div>
            <div class="row">
                <img id="step3_pic" src="assets/step3.png" alt="step3_pic" width="25%">
            </div>
            <div class="row">
                <h5>Get your meals via pick up or chef delivery. </h5>
            </div>
        </div>
    </div>

    <hr>

    <!--DOCUMENT FOOTER - INCLUDES SOCIAL MEDIA ICONS-->
    <footer class="nav text-center" id="footer">  
        <label for='footer' class='text-center'><h3>Follow Us<h3></label>  
        <a class="nav-link" href="#"><img src='/assets/twitter.png' class='follow_icon' alt='twitter'></a> | 
        <a class="nav-link" href="#"><img src='/assets/facebook.png' class='follow_icon' alt='facebook'></a> | 
        <a class="nav-link" href="#"><img src='/assets/instagram.png' class='follow_icon' alt='instagram'></a> | 
        <a class="nav-link" href="#"><img src='/assets/youtube.png' class='follow_icon' alt='youtube'></a>
    </footer>
</div>

