<div class="container">
    <div class="row" id="header">
        <h1>Homecooked</h1>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div id="carousel-main" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="" alt="Third slide">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-md-offset-7">
                    <div class="panel panel-default container-fluid">
                        <div class="panel-heading row">
                            <div class="col-xs-6 text-center"><button class="btn header-button" id="sign-up">Sign Up</button></div>
                            <div class="col-xs-6 text-center"><button class="btn header-button" id="sign-in">Sign In</button></div>
                        </div>

                        <div class="panel-body" id="sign-up-form">
                            <form>
                                <div class="form-group">
                                    <input type="text" class="form-control" id="first_name" placeholder="First Name">
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control" id="last_name" placeholder="Last Name">
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control" id="email" placeholder="Email Address">
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control" id="zipcode" placeholder="Zip Code">
                                </div>

                                <div class="form-group">
                                    <input type="text" class="form-control" id="phone_number" placeholder="Phone Number">
                                </div>

                                <div class="form-group">
                                    <input type="password" class="form-control" id="password" placeholder="Create Password">
                                </div>

                                <button type="submit" id="submit_user" class="btn btn-default">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 col-md-offset-2" id="sign-in-form" style="display:none">
                    <form>
                        <div class="form-group">
                            <input type="text" class="form-control" id="email" placeholder="Email Address">
                        </div>

                        <div class="form-group">
                            <input type="password" class="form-control" id="password" placeholder="Enter Password">
                        </div>

                        <button type="submit" id="sign-in-submit" class="btn btn-success">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4" id="step1">
            <img src="" alt="step1-pic">
        </div>

        <div class="col-md-4" id="step2">
            <img src="" alt="step2-pic">
        </div>

        <div class="col-md-4" id="step3">
            <img src="" alt="step3-pic">
        </div>

    </div>

</div>

<script src="javascript/index.js"></script>